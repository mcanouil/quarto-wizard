{
	"name": "quarto-wizard",
	"displayName": "Quarto Wizard",
	"description": "A Visual Studio Code extension that helps you manage Quarto projects.",
	"version": "1.0.2",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"publisher": "mcanouil",
	"author": {
		"name": "MickaÃ«l CANOUIL",
		"url": "https://mickael.canouil.fr"
	},
	"license": "MIT",
	"icon": "assets/logo/logo.png",
	"galleryBanner": {
		"color": "#333333",
		"theme": "dark"
	},
	"keywords": [
		"quarto",
		"markdown",
		"pandoc",
		"extension",
		"lua",
		"latex",
		"reveal.js",
		"html",
		"typst"
	],
	"categories": [
		"Programming Languages",
		"Data Science",
		"Machine Learning",
		"Notebooks"
	],
	"pricing": "Free",
	"homepage": "https://github.com/mcanouil/quarto-wizard",
	"repository": {
		"type": "git",
		"url": "https://github.com/mcanouil/quarto-wizard"
	},
	"bugs": {
		"url": "https://github.com/mcanouil/quarto-wizard/issues"
	},
	"sponsor": {
		"url": "https://github.com/sponsors/mcanouil"
	},
	"engines": {
		"vscode": "^1.96.0"
	},
	"activationEvents": [
		"onLanguage:quarto",
		"workspaceContains:**/*.{qmd,rmd}",
		"workspaceContains:**/_quarto.{yml,yaml}",
		"workspaceContains:**/_brand.{yml,yaml}",
		"workspaceContains:**/_extension.{yml,yaml}",
		"onUri"
	],
	"main": "./dist/extension",
	"scripts": {
		"build:core": "cd packages/core && npm run build",
		"vscode:prepublish": "npm run build:core && npx webpack --mode production",
		"webpack": "npm run build:core && npx webpack --mode development --stats-error-details",
		"watch": "npm run build:core && npx webpack --watch --mode development --stats-error-details",
		"test-compile": "npm run build:core && npx tsc -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"test": "vscode-test",
		"test:watch": "npm run test-compile && vscode-test",
		"test:manual": "node ./out/test/runTest.js",
		"lint": "eslint --fix --cache --format unix \"src/**/*.{ts,tsx}\"",
		"format": "prettier --write \"src/**/*.{ts,tsx}\" \"packages/*/src/**/*.ts\"",
		"format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"packages/*/src/**/*.ts\"",
		"sync-metadata": "node scripts/sync-package-metadata.mjs"
	},
	"devDependencies": {
		"@eslint/js": "^9.23.0",
		"@types/js-yaml": "^4.0.9",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.6.1",
		"@types/semver": "^7.7.0",
		"@types/vscode": "^1.96.0",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.6.2",
		"eslint": "^9.39.0",
		"eslint-formatter-unix": "^8.40.0",
		"eslint-plugin-tsdoc": "^0.4.0",
		"glob": "^11.1.0",
		"lru-cache": "^11.2.2",
		"mocha": "^11.7.4",
		"prettier": "^3.5.0",
		"ts-loader": "^9.5.4",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.1",
		"webpack": "^5.103.0",
		"webpack-cli": "^6.0.1"
	},
	"dependencies": {
		"@quarto-wizard/core": "*",
		"@types/lodash": "^4.17.16",
		"js-yaml": "^4.1.1",
		"lodash": "^4.17.21",
		"semver": "^7.7.3"
	},
	"contributes": {
		"commands": [
			{
				"command": "quartoWizard.installExtension",
				"title": "Install Extensions",
				"shortTitle": "Install",
				"icon": "$(add)",
				"category": "Quarto Wizard"
			},
			{
				"command": "quartoWizard.extensionsInstalled.install",
				"title": "Install Extensions",
				"shortTitle": "Install",
				"icon": "$(add)",
				"category": "Quarto Wizard"
			},
			{
				"command": "quartoWizard.useTemplate",
				"title": "Use Template",
				"shortTitle": "Quarto Use Template",
				"icon": "$(new-file)",
				"category": "Quarto Wizard"
			},
			{
				"command": "quartoWizard.extensionsInstalled.useTemplate",
				"title": "Use Template",
				"shortTitle": "Use Template",
				"icon": "$(new-file)",
				"category": "Quarto Wizard"
			},
			{
				"command": "quartoWizard.showOutput",
				"title": "Show Quarto Wizard Log Output",
				"shortTitle": "Show Log",
				"icon": "$(output)",
				"category": "Quarto Wizard"
			},
			{
				"command": "quartoWizard.clearRecent",
				"title": "Clear Recently Installed Extensions",
				"shortTitle": "Clear Recent",
				"icon": "$(clear-all)",
				"category": "Quarto Wizard"
			},
			{
				"command": "quartoWizard.clearCache",
				"title": "Clear Extension Cache",
				"shortTitle": "Clear Cache",
				"icon": "$(trash)",
				"category": "Quarto Wizard"
			},
			{
				"command": "quartoWizard.newQuartoReprex",
				"title": "Quarto Reproducible Document",
				"icon": "$(new-file)",
				"category": "Quarto Wizard"
			},
			{
				"command": "quartoWizard.getExtensionsDetails",
				"title": "Get Extensions Details",
				"category": "Quarto Wizard"
			},
			{
				"command": "quartoWizard.extensionsInstalled.refresh",
				"title": "Refresh Installed Extensions",
				"shortTitle": "Refresh",
				"icon": "$(refresh)",
				"category": "Quarto Wizard"
			},
			{
				"command": "quartoWizard.extensionsInstalled.openSource",
				"title": "Open Extension Source",
				"shortTitle": "Open Source",
				"icon": "$(github)",
				"category": "Quarto Wizard"
			},
			{
				"command": "quartoWizard.extensionsInstalled.update",
				"title": "Update Extension",
				"shortTitle": "Update",
				"icon": "$(cloud-download)",
				"category": "Quarto Wizard"
			},
			{
				"command": "quartoWizard.extensionsInstalled.remove",
				"title": "Remove Extension",
				"shortTitle": "Remove",
				"icon": "$(remove)",
				"category": "Quarto Wizard"
			},
			{
				"command": "quartoWizard.extensionsInstalled.revealInExplorer",
				"title": "Reveal in Explorer View",
				"shortTitle": "Reveal in Explorer",
				"icon": "$(folder-opened)",
				"category": "Quarto Wizard"
			},
			{
				"command": "quartoWizard.extensionsInstalled.updateAll",
				"title": "Update All Extensions",
				"shortTitle": "Update All",
				"icon": "$(sync)",
				"category": "Quarto Wizard"
			},
			{
				"command": "quartoWizard.extensionsInstalled.removeMultiple",
				"title": "Remove Multiple Extensions",
				"shortTitle": "Remove Multiple",
				"icon": "$(trash)",
				"category": "Quarto Wizard"
			},
			{
				"command": "quartoWizard.extensionsInstalled.validate",
				"title": "Validate Extension",
				"shortTitle": "Validate",
				"icon": "$(check)",
				"category": "Quarto Wizard"
			},
			{
				"command": "quartoWizard.setGitHubToken",
				"title": "Set GitHub Token (Manual)",
				"shortTitle": "Set Token",
				"icon": "$(key)",
				"category": "Quarto Wizard"
			},
			{
				"command": "quartoWizard.clearGitHubToken",
				"title": "Clear GitHub Token (Manual)",
				"shortTitle": "Clear Token",
				"icon": "$(key)",
				"category": "Quarto Wizard"
			}
		],
		"submenus": [
			{
				"id": "quartoWizard.menu",
				"label": "Quarto Wizard"
			}
		],
		"menus": {
			"file/newFile": [
				{
					"command": "quartoWizard.newQuartoReprex",
					"group": "Quarto"
				},
				{
					"command": "quartoWizard.useTemplate",
					"group": "Quarto"
				}
			],
			"explorer/context": [
				{
					"submenu": "quartoWizard.menu",
					"group": "2_execution"
				}
			],
			"editor/context": [
				{
					"submenu": "quartoWizard.menu",
					"group": "quartoWizard"
				}
			],
			"quartoWizard.menu": [
				{
					"command": "quartoWizard.installExtension",
					"group": "quartoWizard@1"
				},
				{
					"command": "quartoWizard.useTemplate",
					"group": "quartoWizard@2"
				},
				{
					"command": "quartoWizard.newQuartoReprex",
					"group": "quartoWizard@3"
				},
				{
					"command": "quartoWizard.showOutput",
					"group": "quartoWizard@4"
				},
				{
					"command": "quartoWizard.clearRecent",
					"group": "quartoWizard@5"
				},
				{
					"command": "quartoWizard.clearCache",
					"group": "quartoWizard@6"
				}
			],
			"view/title": [
				{
					"command": "quartoWizard.installExtension",
					"when": "view == quartoWizard.extensionsInstalled",
					"group": "navigation@1"
				},
				{
					"command": "quartoWizard.useTemplate",
					"when": "view == quartoWizard.extensionsInstalled",
					"group": "navigation@2"
				},
				{
					"command": "quartoWizard.extensionsInstalled.updateAll",
					"when": "view == quartoWizard.extensionsInstalled",
					"group": "navigation@3"
				},
				{
					"command": "quartoWizard.extensionsInstalled.refresh",
					"when": "view == quartoWizard.extensionsInstalled",
					"group": "navigation@4"
				}
			],
			"view/item/context": [
				{
					"command": "quartoWizard.extensionsInstalled.install",
					"when": "view == quartoWizard.extensionsInstalled && viewItem == quartoExtensionWorkspaceFolder",
					"group": "inline@1"
				},
				{
					"command": "quartoWizard.extensionsInstalled.useTemplate",
					"when": "view == quartoWizard.extensionsInstalled && viewItem == quartoExtensionWorkspaceFolder",
					"group": "inline@2"
				},
				{
					"command": "quartoWizard.extensionsInstalled.removeMultiple",
					"when": "view == quartoWizard.extensionsInstalled && viewItem == quartoExtensionWorkspaceFolder",
					"group": "inline@3"
				},
				{
					"command": "quartoWizard.extensionsInstalled.update",
					"when": "view == quartoWizard.extensionsInstalled && viewItem == quartoExtensionItemOutdated",
					"group": "inline@3"
				},
				{
					"command": "quartoWizard.extensionsInstalled.remove",
					"when": "view == quartoWizard.extensionsInstalled && (viewItem == quartoExtensionItem || viewItem == quartoExtensionItemOutdated || viewItem == quartoExtensionItemNoSource)",
					"group": "inline@4"
				},
				{
					"command": "quartoWizard.extensionsInstalled.openSource",
					"when": "view == quartoWizard.extensionsInstalled && (viewItem == quartoExtensionItem || viewItem == quartoExtensionItemOutdated) && viewItem != quartoExtensionItemNoSource",
					"group": "inline@5"
				},
				{
					"command": "quartoWizard.extensionsInstalled.update",
					"when": "view == quartoWizard.extensionsInstalled && viewItem == quartoExtensionItemOutdated",
					"group": "navigation@1"
				},
				{
					"command": "quartoWizard.extensionsInstalled.remove",
					"when": "view == quartoWizard.extensionsInstalled && (viewItem == quartoExtensionItem || viewItem == quartoExtensionItemOutdated || viewItem == quartoExtensionItemNoSource)",
					"group": "navigation@2"
				},
				{
					"command": "quartoWizard.extensionsInstalled.openSource",
					"when": "view == quartoWizard.extensionsInstalled && (viewItem == quartoExtensionItem || viewItem == quartoExtensionItemOutdated) && viewItem != quartoExtensionItemNoSource",
					"group": "navigation@3"
				},
				{
					"command": "quartoWizard.extensionsInstalled.revealInExplorer",
					"when": "view == quartoWizard.extensionsInstalled && (viewItem == quartoExtensionItem || viewItem == quartoExtensionItemOutdated || viewItem == quartoExtensionItemNoSource)",
					"group": "navigation@4"
				},
				{
					"command": "quartoWizard.extensionsInstalled.validate",
					"when": "view == quartoWizard.extensionsInstalled && (viewItem == quartoExtensionItem || viewItem == quartoExtensionItemOutdated || viewItem == quartoExtensionItemNoSource)",
					"group": "navigation@5"
				}
			],
			"commandPalette": [
				{
					"command": "quartoWizard.extensionsInstalled.openSource",
					"when": "false"
				},
				{
					"command": "quartoWizard.extensionsInstalled.install",
					"when": "false"
				},
				{
					"command": "quartoWizard.extensionsInstalled.useTemplate",
					"when": "false"
				},
				{
					"command": "quartoWizard.extensionsInstalled.update",
					"when": "false"
				},
				{
					"command": "quartoWizard.extensionsInstalled.remove",
					"when": "false"
				},
				{
					"command": "quartoWizard.extensionsInstalled.refresh",
					"when": "false"
				},
				{
					"command": "quartoWizard.getExtensionsDetails",
					"when": "false"
				},
				{
					"command": "quartoWizard.extensionsInstalled.revealInExplorer",
					"when": "false"
				},
				{
					"command": "quartoWizard.extensionsInstalled.validate",
					"when": "false"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "quarto-wizard-explorer",
					"title": "Quarto Wizard",
					"icon": "assets/logo/logo.svg",
					"contextualTitle": "Quarto Wizard",
					"when": "workspaceFolderCount >= 1"
				}
			]
		},
		"walkthroughs": [
			{
				"id": "quartoWizard.gettingStarted",
				"title": "Getting Started with Quarto Wizard",
				"description": "Learn how to manage Quarto extensions and templates",
				"steps": [
					{
						"id": "welcome",
						"title": "Welcome to Quarto Wizard",
						"description": "Your magical assistant for managing Quarto projects, extensions, and templates.",
						"media": {
							"image": "assets/logo/logo.png",
							"altText": "Quarto Wizard logo - a cartoon dog wizard wearing a dark hat with red band holding a magic wand"
						}
					},
					{
						"id": "installExtension",
						"title": "Install Extensions",
						"description": "Browse and install from over 250 Quarto extensions.\n[Open Documentation](https://github.com/mcanouil/quarto-wizard#install-quarto-extensions)",
						"media": {
							"markdown": "assets/walkthroughs/install-extension.md"
						},
						"completionEvents": [
							"onCommand:quartoWizard.installExtension"
						]
					},
					{
						"id": "exploreView",
						"title": "Manage Installed Extensions",
						"description": "View, update, and remove extensions from the Explorer view.\n[Open Documentation](https://github.com/mcanouil/quarto-wizard#quarto-wizard-explorer-view)",
						"media": {
							"markdown": "assets/walkthroughs/explorer-view.md"
						},
						"completionEvents": [
							"onView:quartoWizard.extensionsInstalled"
						]
					},
					{
						"id": "useTemplate",
						"title": "Use Templates",
						"description": "Quick-start documents with pre-configured templates.\n[Open Documentation](https://github.com/mcanouil/quarto-wizard#use-quarto-templates)",
						"media": {
							"markdown": "assets/walkthroughs/use-template.md"
						},
						"completionEvents": [
							"onCommand:quartoWizard.useTemplate"
						]
					},
					{
						"id": "createReprex",
						"title": "Create Reproducible Documents",
						"description": "Generate reproducible examples for R, Python, or Julia.\n[Open Documentation](https://github.com/mcanouil/quarto-wizard#create-a-new-reproducible-document)",
						"media": {
							"markdown": "assets/walkthroughs/reprex.md"
						},
						"completionEvents": [
							"onCommand:quartoWizard.newQuartoReprex"
						]
					},
					{
						"id": "browseDirectory",
						"title": "Browse Extensions Directory",
						"description": "Explore the full catalogue with filtering and search.\n[Open Extensions Directory](https://m.canouil.dev/quarto-extensions/)",
						"media": {
							"markdown": "assets/walkthroughs/browse-directory.md"
						},
						"completionEvents": [
							"onLink:https://m.canouil.dev/quarto-extensions/*"
						]
					}
				]
			}
		],
		"viewsWelcome": [
			{
				"view": "quartoWizard.extensionsInstalled",
				"contents": "No Quarto extensions installed ([browse extensions](https://m.canouil.dev/quarto-extensions/)).\n[Install Extensions](command:quartoWizard.installExtension)\nTo learn more about Quarto and Quarto extensions [read the documentation](https://quarto.org/)."
			}
		],
		"views": {
			"quarto-wizard-explorer": [
				{
					"id": "quartoWizard.extensionsInstalled",
					"type": "tree",
					"name": "Extensions Installed",
					"icon": "assets/logo/logo.svg",
					"contextualTitle": "Quarto Wizard Extensions Installed",
					"visibility": "visible",
					"when": "workspaceFolderCount >= 1"
				}
			]
		},
		"configuration": {
			"title": "Quarto Wizard",
			"properties": {
				"quartoWizard.ask.trustAuthors": {
					"order": 1,
					"scope": "resource",
					"type": "string",
					"enum": [
						"never",
						"ask"
					],
					"default": "ask",
					"markdownDescription": "Ask for confirmation before trusting an extension author. `ask` to ask for confirmation, `never` to always confirm and never ask again."
				},
				"quartoWizard.ask.confirmInstall": {
					"order": 2,
					"scope": "resource",
					"type": "string",
					"enum": [
						"never",
						"ask"
					],
					"default": "ask",
					"markdownDescription": "Ask for confirmation before installing an extension. `ask` to ask for confirmation, `never` to always confirm and never ask again."
				},
				"quartoWizard.log.level": {
					"order": 20,
					"scope": "resource",
					"type": "string",
					"enum": [
						"error",
						"warn",
						"info",
						"debug"
					],
					"default": "info",
					"markdownDescription": "The level of logging to use. `error` to only log errors, `warn` to log warnings and errors, `info` to log info, warnings, and errors, `debug` to log everything."
				},
				"quartoWizard.cache.ttlMinutes": {
					"order": 10,
					"scope": "resource",
					"type": "number",
					"minimum": 1,
					"maximum": 1440,
					"default": 30,
					"markdownDescription": "Cache duration for extension registry data in minutes. Lower values fetch fresher data but increase network requests. Default is 30 minutes."
				},
				"quartoWizard.registry.url": {
					"order": 11,
					"scope": "resource",
					"type": "string",
					"format": "uri",
					"default": "https://m.canouil.dev/quarto-extensions/extensions.json",
					"markdownDescription": "URL to the Quarto extensions registry JSON file. Change this to use a custom registry. The registry must contain entries with at least `id`, `name`, and `owner` fields."
				}
			}
		}
	}
}
