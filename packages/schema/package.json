{
	"name": "@quarto-wizard/schema",
	"displayName": "Quarto Wizard Schema",
	"version": "2.1.3",
	"description": "Schema types, parsing, validation, and caching for Quarto extension schemas",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc && cp src/validation/extension-schema.json dist/validation/ && cp src/validation/extension-schema.json ../../docs/assets/schema/v1/extension-schema.json",
		"watch": "mkdir -p dist/validation && cp src/validation/extension-schema.json dist/validation/ && tsc --watch",
		"clean": "rm -rf dist",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "eslint --fix --cache \"src/**/*.ts\""
	},
	"keywords": [
		"quarto",
		"extension",
		"schema"
	],
	"author": {
		"name": "MickaÃ«l CANOUIL",
		"url": "https://mickael.canouil.fr"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/mcanouil/quarto-wizard",
		"directory": "packages/schema"
	},
	"dependencies": {
		"js-yaml": "^4.1.0"
	},
	"devDependencies": {
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^25.0.3",
		"@vitest/coverage-v8": "^4.0.16",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"engines": {
		"node": ">=25.0.0"
	},
	"bugs": {
		"url": "https://github.com/mcanouil/quarto-wizard/issues"
